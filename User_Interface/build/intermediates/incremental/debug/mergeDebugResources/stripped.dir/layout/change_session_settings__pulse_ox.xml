<?xml version="1.0" encoding="utf-8"?>
<LinearLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    android:id="@+id/linear_layout__change_session_settings__pulse_ox"
    android:baselineAligned="false"
    android:orientation="horizontal"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:gravity="center_vertical"
    >

    <ImageView
        android:id="@+id/logo_pulse_ox"
        android:layout_width="145dp"
        android:layout_height="@dimen/change_session_settings_row_height"
        android:background="@null"
        android:contentDescription="@null"
        android:gravity="center"
        android:src="@drawable/logo_pulse_ox" />

    <LinearLayout
        android:layout_width="250dp"
        android:layout_height="wrap_content"
        android:gravity="center"
        android:orientation="vertical" >

        <TextView
            android:id="@+id/textViewPulseOx"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:gravity="center"
            android:text="@string/textPulseOximeter"
            android:textSize="30sp"
            />

        <TextView
            android:id="@+id/textViewDeviceSpecificSettingsPulseOxHumanReadableSerialNumber"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:gravity="center"
            android:text="@string/textDefaultHumanReadableDeviceId"
            android:textSize="30sp"
            />

        <TextView
            android:id="@+id/textViewChangeSessionSettingsPulseOxFirmwareVersion"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:gravity="center"
            android:text="@string/textDefaultHumanReadableDeviceId"
            android:textSize="15sp"
            />

    </LinearLayout>

    <LinearLayout
        android:layout_width="0dp"
        android:layout_height="match_parent"
        android:layout_marginBottom="5dp"
        android:layout_marginTop="5dp"
        android:layout_weight="1"
        android:orientation="vertical" >

        <Button
            android:id="@+id/buttonAddPulseOx"
            android:layout_width="200dp"
            android:layout_height="match_parent"
            android:layout_gravity="center"
            android:background="@drawable/button_blue"
            android:text="@string/add_pulse_oximeter"
            android:textColor="@color/white" />
    </LinearLayout>

    <LinearLayout
        android:layout_width="0dp"
        android:layout_height="match_parent"
        android:layout_weight="1"
        android:orientation="vertical"
        android:layout_marginTop="5dp"
        android:layout_marginBottom="5dp"
        >

        <Button
            android:id="@+id/buttonRemovePulseOximeter"
            android:layout_width="200dp"
            android:layout_height="match_parent"
            android:layout_gravity="center"
            android:background="@drawable/button_blue"
            android:text="@string/remove_pulse_oximeter"
            android:textColor="@color/white"
            />
    </LinearLayout>

    <LinearLayout
        android:layout_width="0dp"
        android:layout_height="match_parent"
        android:layout_weight="1"
        android:orientation="vertical"
        android:layout_marginTop="5dp"
        android:layout_marginBottom="5dp"
        android:visibility="invisible"
        >

        <Button
            android:id="@+id/buttonChangePulseOxSettings"
            android:layout_width="200dp"
            android:layout_height="match_parent"
            android:layout_gravity="center"
            android:background="@drawable/button_blue"
            android:text="@string/change_nonin_wrist_ox_settings"
            android:textColor="@color/white"
            />
    </LinearLayout>

    <LinearLayout
        android:layout_width="0dp"
        android:layout_height="match_parent"
        android:layout_marginTop="5dp"
        android:layout_marginBottom="5dp"
        android:layout_weight="1"
        android:orientation="vertical"
        android:visibility="invisible"
        >

        <Button
            android:id="@+id/buttonAdjustPulseOxEarlyWarningScoreThresholds"
            android:layout_width="200dp"
            android:layout_height="match_parent"
            android:layout_gravity="center"
            android:textColor="@color/white"
            android:text="@string/adjust_ews_thresholds"
            android:background="@drawable/button_blue"
            />
    </LinearLayout>

</LinearLayout>