<?xml version="1.0" encoding="utf-8"?>

<TableLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:layout_column="0"
    android:layout_row="2">

    <TableRow
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:gravity="center_horizontal" >

        <TextView
            android:id="@+id/textVitalSignValue"
            android:text="@string/dummy_measurement"
            android:layout_marginBottom="10dp"
            android:layout_marginTop="10dp"
            android:textSize="55sp"
            android:textStyle="bold" />

    </TableRow>

    <TableRow
        android:layout_width="match_parent"
        android:layout_height="match_parent" >

        <Button
            android:id="@+id/buttonRespirationDistressNone"
            android:text="@string/none"
            android:textSize="36sp"
            android:textStyle="bold"
            android:layout_marginTop="@dimen/keypad_margin_top"
            android:layout_width="0dp"
            android:layout_weight="3"
            android:layout_height="100dp"
            android:background="@drawable/button_green"
            />

        <TextView
            android:textSize="18sp"
            android:lineSpacingExtra="3dp"
            android:layout_marginStart="5dp"
            android:layout_width="0dp"
            android:layout_weight="2"
            android:layout_height="match_parent"
            android:gravity="center_vertical"
            />

    </TableRow>

    <TableRow
        android:layout_width="match_parent"
        android:layout_height="match_parent" >

        <Button
            android:id="@+id/buttonRespirationDistressMild"
            android:text="@string/mild"
            android:textSize="36sp"
            android:textStyle="bold"
            android:layout_marginTop="@dimen/keypad_margin_top"
            android:layout_width="0dp"
            android:layout_weight="3"
            android:layout_height="100dp"
            android:background="@drawable/button_yellow"
            />

        <TextView
            android:id="@+id/textRespirationDistressMildGuide"
            android:text="@string/dummy_measurement"
            android:textSize="18sp"
            android:lineSpacingExtra="3dp"
            android:layout_marginStart="5dp"
            android:layout_width="0dp"
            android:layout_weight="2"
            android:layout_height="match_parent"
            android:gravity="center_vertical"
            />

    </TableRow>

    <TableRow
        android:layout_width="match_parent"
        android:layout_height="match_parent" >

        <Button
            android:id="@+id/buttonRespirationDistressModerate"
            android:text="@string/moderate"
            android:textSize="36sp"
            android:textStyle="bold"
            android:layout_marginTop="@dimen/keypad_margin_top"
            android:layout_width="0dp"
            android:layout_weight="3"
            android:layout_height="100dp"
            android:background="@drawable/button_orange"
            />

        <TextView
            android:id="@+id/textRespirationDistressModerateGuide"
            android:text="@string/dummy_measurement"
            android:textSize="18sp"
            android:lineSpacingExtra="3dp"
            android:layout_marginStart="5dp"
            android:layout_width="0dp"
            android:layout_weight="2"
            android:layout_height="match_parent"
            android:gravity="center_vertical"
            />

    </TableRow>

    <TableRow
        android:layout_width="match_parent"
        android:layout_height="match_parent" >

        <Button
            android:id="@+id/buttonRespirationDistressSevere"
            android:text="@string/severe"
            android:textSize="36sp"
            android:textStyle="bold"
            android:layout_marginTop="@dimen/keypad_margin_top"
            android:layout_width="0dp"
            android:layout_weight="3"
            android:layout_height="100dp"
            android:background="@drawable/button_red"
            />

        <TextView
            android:id="@+id/textRespirationDistressSevereGuide"
            android:text="@string/dummy_measurement"
            android:textSize="18sp"
            android:lineSpacingExtra="3dp"
            android:layout_marginStart="5dp"
            android:layout_width="0dp"
            android:layout_weight="2"
            android:layout_height="match_parent"
            android:gravity="center_vertical"
            />

    </TableRow>
</TableLayout>
