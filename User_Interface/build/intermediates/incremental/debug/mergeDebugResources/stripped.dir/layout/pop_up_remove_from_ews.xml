<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="800dp"
    android:layout_height="wrap_content"
    android:background="@drawable/bg_white_round"
    android:orientation="vertical"
    android:padding="20dp">

    <LinearLayout
        android:id="@+id/layoutRemoveFromEws"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:gravity="center"
        android:orientation="vertical">

        <TextView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:gravity="center"
            android:text="@string/remove_this_sensors_measurements_from_future_ews_calculations"
            android:textSize="30sp"
            android:textStyle="bold" />

        <TextView
            android:id="@+id/textViewLineOne"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="@string/remove_sensor_from_ews_line_one"
            android:textSize="24sp" />

        <Space
            android:layout_width="match_parent"
            android:layout_height="20dp" />

        <TextView
            android:id="@+id/textViewLineTwo"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="@string/remove_sensor_from_ews_line_two"
            android:textSize="24sp" />

    </LinearLayout>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginStart="50dp"
        android:layout_marginTop="20dp"
        android:layout_marginEnd="50dp"
        android:orientation="horizontal">

        <Button
            android:id="@+id/buttonRemove"
            android:layout_width="0dp"
            android:layout_height="match_parent"
            android:layout_weight="1"
            android:background="@drawable/button_blue"
            android:text="@string/remove"
            android:textColor="@color/white"
            android:textSize="36sp" />

        <Space
            android:layout_width="20dp"
            android:layout_height="match_parent" />

        <Button
            android:id="@+id/buttonKeep"
            android:layout_width="0dp"
            android:layout_height="match_parent"
            android:layout_weight="1"
            android:background="@drawable/button_blue"
            android:text="@string/keep"
            android:textColor="@color/white"
            android:textSize="36sp" />

    </LinearLayout>

</LinearLayout>
