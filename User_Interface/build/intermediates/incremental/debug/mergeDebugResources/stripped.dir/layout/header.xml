<?xml version="1.0" encoding="utf-8"?>
<LinearLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/linearLayoutHeader"
    android:orientation="horizontal"
    android:layout_width="fill_parent"
    android:layout_height="wrap_content"
    android:gravity="center|center_vertical"
    tools:context=".MainActivity">

    <ImageView
        android:layout_width="160dp"
        android:layout_height="match_parent"
        android:paddingTop="5dp"
		android:paddingBottom="5dp"
		android:layout_marginStart="5dp"
        android:layout_gravity="center"
        android:contentDescription="@null"
		android:id="@+id/imageIsansysLogo"
        android:src="@drawable/isansys_text"/>

	<LinearLayout
	    android:layout_marginStart="20dp"
	    android:layout_width="wrap_content"
	    android:layout_height="match_parent"
	    android:orientation="vertical" >
	       
	    <TextView
	        android:id="@+id/textHeaderWardName"
	        android:layout_height="0dp"
	        android:layout_width="wrap_content"
	        android:layout_weight="1"
	        android:text="@string/dummy_ward_name_to_check_layout_size"
	        android:textSize="20sp"
	        android:textStyle="bold"
	        android:gravity="center"
	        />  
	
	    <TextView
	        android:id="@+id/textHeaderBedName"
	        android:layout_height="0dp"
	        android:layout_width="wrap_content"
	        android:layout_weight="1"
	        android:text="@string/dummy_bed_name_to_check_layout_size"
	        android:textSize="20sp"
	        android:textStyle="bold"
	        android:gravity="center"
	        />  
    
	</LinearLayout>
	
	<ImageView
        android:id="@+id/imageHeaderAgeRange"
        android:layout_width="60dp"
        android:layout_height="fill_parent"
        android:layout_marginStart="5dp"
        android:layout_marginEnd="5dp"
        android:layout_marginTop="2dp"
        android:contentDescription="@null"
        android:gravity="start"
        android:src="@drawable/age_range_0_to_1"
        android:visibility="invisible"
        />
	
	<TextView
	    android:id="@+id/textHeaderPatientId"
	    android:layout_height="fill_parent"
	    android:layout_width="0dp"
        android:layout_weight="1"
        android:text="@string/dummy_patient_id_to_check_layout_size"
	    android:textStyle="bold"
	    android:textSize="30sp"
	    android:layout_marginStart="5dp"
	    android:gravity="start|center"
        />

	<TextView
		android:id="@+id/textHeaderCaution"
		android:layout_height="fill_parent"
		android:layout_width="wrap_content"
		android:text="@string/caution_exclusively_for_investigational_use_only"
		android:textStyle="bold"
		android:textColor="@color/red"
		android:textSize="20sp"
		android:gravity="center"
		android:layout_marginEnd="10dp"
		/>

</LinearLayout>