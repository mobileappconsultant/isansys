<?xml version="1.0" encoding="utf-8"?>
<LinearLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    android:id="@+id/startSessionSettingsActivity"
    android:orientation="vertical"
    android:layout_width="fill_parent"
    android:layout_height="fill_parent"
    android:gravity="start"
    android:layout_margin="10dp"
    >
	        
    <TextView
        android:id="@+id/labelPatientID"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="10dp"
        android:text="@string/please_type_in_a_unique_patient_identifier"
        android:textColor="@color/black"
        android:textSize="30sp"
        android:textStyle="bold"
        />

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_gravity="center_vertical|center_horizontal|center" >

        <EditText
            android:id="@+id/editPatientID"
            android:layout_width="800dp"
            android:layout_height="wrap_content"
            android:ems="10"
            android:hint="@string/textPleaseTypeHere"
            android:imeOptions="actionDone"
            android:maxLength="50"
            android:inputType="textPassword|textVisiblePassword"
            android:textSize="30sp" >
        </EditText>

        <Button
            android:id="@+id/buttonAppendDateTime"
            android:layout_width="100dp"
            android:layout_height="90dp"
            android:layout_gravity="start"
            android:background="@drawable/button_blue"
            android:text="@string/appendDateTime"
            android:textColor="@color/white"
            android:layout_margin="10dp"
            />
<!--
        <TextView
            android:id="@+id/textViewPressDoneWhenFinished"
            android:layout_width="wrap_content"
            android:layout_height="match_parent"
            android:gravity="center_vertical|center_horizontal|center"
            android:text="@string/StringPressDoneWhenFinished"
            android:textAppearance="?android:attr/textAppearanceLarge"
            android:textColor="@color/black"
            android:textSize="40sp"
            android:textStyle="bold" />
-->
    </LinearLayout>

    <LinearLayout
        android:id="@+id/linearLayoutPressDoneWhenFinished"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:gravity="right"
        android:baselineAligned="false"
        android:orientation="horizontal" >

        <TextView
            android:id="@+id/textViewPressDoneWhenFinished"
            android:layout_width="wrap_content"
            android:layout_height="match_parent"
            android:gravity="center_horizontal|center"
            android:text="@string/StringPressDoneWhenFinished"
            android:textColor="@color/black"
            android:textSize="24sp"
            android:textStyle="bold"
            />

            <ImageView
                android:id="@+id/imagePressDoneWhenFinishedDownArrow"
                android:layout_width="50dp"
                android:layout_height="90dp"
                android:layout_gravity="bottom|end"
                android:layout_marginEnd="50dp"
                android:contentDescription="@null"
                android:src="@drawable/arrow" />

    </LinearLayout>

    <LinearLayout
        android:id="@+id/linearLayoutPatientDetailsShowNextArrow"
        android:layout_width="wrap_content"
        android:layout_height="fill_parent"
        android:layout_gravity="bottom|end" >

        <TextView
            android:id="@+id/textViewPatientDetail_pressNextButton"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_gravity="bottom|end"
            android:layout_margin="20dp"
            android:text="@string/String_Press_next_to_continue"
            android:textSize="24sp"
            android:textStyle="bold" />

        <ImageView
            android:id="@+id/imagePatientDetails_DownArrow"
            android:layout_width="50dp"
            android:layout_height="90dp"
            android:layout_gravity="bottom|end"
            android:layout_marginEnd="25dp"
            android:contentDescription="@null"
            android:src="@drawable/arrow" />

    </LinearLayout>
	
</LinearLayout>
