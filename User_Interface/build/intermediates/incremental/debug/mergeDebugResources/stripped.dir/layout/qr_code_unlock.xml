                        android:layout_height="wrap_content"
                        android:paddingTop="@dimen/qr_unlock_page__padding_at_top_of_sensor_name"
                        />
                    
                    <TextView
                        android:id="@+id/textNoninWristOxHumanReadableDeviceId"
                        android:text="@string/six_dashes"
                        android:textStyle="normal"
                        android:textSize="14sp"
                        android:textColor="@color/white"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        />

                    <LinearLayout
                        android:id="@+id/linearLayoutLockScreenDeviceInfoPulseOxShowWhenConnected"
                        android:layout_height="match_parent"
                        android:layout_width="match_parent"
                        android:orientation="vertical"
                        android:gravity="center"
                        >
