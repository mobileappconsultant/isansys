                            />

                        <!-- Filler to match other indicators -->
                        <LinearLayout
                            android:id="@+id/linearLayoutLockScreenDeviceRedBorderStatusWeightScale"
                            android:layout_height="40dp"
                            android:layout_width="fill_parent"
                            android:background="@drawable/red_border_status"
                            android:maxHeight="50dp"
                            android:visibility="invisible"
                            >

                            <TextView
                                android:text="XX"
                                android:textStyle="bold"
                                android:textSize="13sp"
                                android:textColor="@color/black"
                                android:layout_width="match_parent"
                                android:layout_height="wrap_content"
                                android:gravity="center"
                                />

                        </LinearLayout>

                        <ImageView
                            android:id="@+id/imageBatteryWeightScale"
                            android:layout_width="40dp"
                            android:layout_height="40dp"
                            android:background="@null"
                            android:gravity="center"
                            android:maxHeight="50dp"
                            android:contentDescription="@null"
                            android:visibility="invisible"
                            />

                        <TextView
                            android:text="@string/three_blank_lines_string"
                            android:textStyle="normal"
                            android:textSize="12sp"
                            android:textColor="@color/white"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:visibility="invisible"
                            />
                    </LinearLayout>

                    <LinearLayout
                        android:id="@+id/linearLayoutLockScreenDeviceInfoWeightScaleShowWhenNotConnected"
                        android:layout_height="match_parent"
                        android:layout_width="match_parent"
                        android:orientation="vertical"
                        android:gravity="center"
                        >
                        <ImageView
                            android:id="@+id/imageWeightScaleOutOfRange"
                            android:layout_width="@dimen/unlock_page_out_of_range_image_width"
                            android:layout_height="@dimen/unlock_page_out_of_range_image_height"
                            android:background="@null"
                            android:gravity="center"
                            android:src="@drawable/out_of_range_white"
                            android:contentDescription="@null"
                            />
                    </LinearLayout>

                    <LinearLayout
                        android:id="@+id/linearLayoutLockScreenDeviceInfoWeightScaleShowWhenRemoved"
                        android:layout_height="match_parent"
                        android:layout_width="match_parent"
                        android:orientation="vertical"
                        android:gravity="center"
                        >

                        <ImageView
                            android:layout_width="50dp"
                            android:layout_height="50dp"
                            android:background="@null"
                            android:gravity="center"
                            android:src="@drawable/removed"
                            android:contentDescription="@null"
                            />

                    </LinearLayout>

                </LinearLayout>

            </LinearLayout>                

        </TableRow>

    </TableLayout>

</LinearLayout>
