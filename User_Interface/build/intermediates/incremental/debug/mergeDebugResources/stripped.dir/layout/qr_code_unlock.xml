                            android:src="@drawable/removed"
                            android:contentDescription="@null"
                            />

                    </LinearLayout>

                </LinearLayout>

                <LinearLayout
                    android:id="@+id/linearLayoutLockScreenDeviceInfoWeightScale"
                    android:layout_height="fill_parent"
                    android:layout_width="0dp"
                    android:layout_weight="1"
                    android:layout_margin="@dimen/qr_unlock_page__gap_between_device_info_display"
                    android:background="@drawable/rounded_corner_green"
                    android:orientation="vertical"
                    android:gravity="center"
                    >

                    <TextView
                        android:id="@+id/textWeightScale"
                        android:text="@string/weightScaleSingleLine"
