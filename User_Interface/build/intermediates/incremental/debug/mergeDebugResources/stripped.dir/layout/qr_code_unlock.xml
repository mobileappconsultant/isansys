<?xml version="1.0" encoding="utf-8"?>
<LinearLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    android:id="@+id/barCodeActivity_QrUnlock"
    android:orientation="horizontal"
    android:layout_width="fill_parent"
    android:layout_height="fill_parent"
    android:layout_marginStart="10dp"
    android:layout_marginEnd="10dp"
    >
    
    <LinearLayout
        android:id="@+id/qr_bar_code"
        android:layout_width="630dp"
        android:layout_height="630dp"
        android:gravity="center"
        android:orientation="vertical" >

        <Button
            android:id="@+id/buttonUnlockQrCodeScanScreen"
            android:layout_width="match_parent"
            android:layout_height="0dp"
            android:layout_margin="50dp"
            android:layout_weight="0.15"
            android:background="@drawable/button_blue"
            android:text="@string/buttonTextQrCodeUnlockScreen"
            android:textColor="@color/white"
            android:textSize="35sp"
            android:textStyle="bold" />

        <Button
            android:id="@+id/buttonSimulateAdminQrCode"
            android:layout_width="match_parent"
            android:layout_height="0dp"
            android:layout_margin="10dp"
            android:layout_weight="0.15"
            android:background="@drawable/button_blue"
            android:text="Simulate Admin QR Code"
            android:textColor="@color/white"
            android:textSize="35sp"
            android:textStyle="bold" />

        <Button
            android:id="@+id/buttonSimulateGeneralQrCode"
            android:layout_width="match_parent"
            android:layout_height="0dp"
            android:layout_margin="10dp"
            android:layout_weight="0.15"
            android:background="@drawable/button_blue"
            android:text="Simulate General QR Code"
            android:textColor="@color/white"
            android:textSize="35sp"
            android:textStyle="bold" />
    </LinearLayout>
    
    <TableLayout
        android:layout_width="match_parent"  
        android:layout_height="match_parent"
        android:stretchColumns="*"
        android:shrinkColumns="*"
        android:gravity="center"
        android:layout_margin="5dp"
        >
        
        <TableRow>
            <TextView
                android:id="@+id/textPleaseScanIdQrCode"
                android:text="@string/please_scan_general_user_qr_code_to_access_patient_gateway"
                android:gravity="center"
                android:textStyle="bold"
                android:textSize="36sp"
                android:layout_weight="3"
                />
        </TableRow>
        
        <TableRow>
            <TextView 
                android:id="@+id/textQrCodeUnlockPageHelp"
                android:text="@string/hold_qr_code_so_it_fits_in_the_smaller_lighter_square_on_the_left"
                android:gravity="center"
                android:textStyle="bold"
                android:textSize="24sp"
                android:layout_weight="3"
                />
        </TableRow>

        <TableRow android:id="@+id/tableRowStartVideoCall">

            <LinearLayout
                android:id="@+id/linearLayoutStartVideoCall"
                android:layout_width="fill_parent"
                android:layout_height="fill_parent"
                android:gravity="center"
                android:background="@drawable/button_blue"
                android:layout_marginStart="70dp"
                android:layout_marginEnd="70dp"
                android:layout_marginBottom="20dp"
                android:paddingTop="40dp"
                android:paddingBottom="40dp"
                android:baselineAligned="false">

                <ImageView
                    android:id="@+id/imageVideoCall"
                    android:layout_width="100dp"
                    android:layout_height="100dp"
                    android:src="@drawable/video_chat_white"
                    android:contentDescription="@null" />

                <LinearLayout
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:gravity="center"
                    android:layout_marginStart="20dp"
                    android:orientation="vertical"
                    >

                    <TextView
                        android:id="@+id/textStartVideoCall"
                        android:text="@string/start_video_call"
                        android:textStyle="bold"
                        android:textSize="32sp"
                        android:textColor="@color/white"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:gravity="center"
                        />

                    <TextView
                        android:id="@+id/textLongPress"
                        android:text="@string/press_for_two_seconds"
                        android:textStyle="bold"
                        android:textSize="20sp"
                        android:textColor="@color/white"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:gravity="center"
                        />

                </LinearLayout>

            </LinearLayout>

        </TableRow>

        <TableRow
            android:id="@+id/tableRowSoftwareUpdatePending"
            android:visibility="gone"
            >

            <LinearLayout
                android:layout_width="fill_parent"
                android:layout_height="fill_parent"
                android:gravity="center"
                android:baselineAligned="false">

                <LinearLayout
                    android:layout_height="185dp"
                    android:layout_width="140dp"
                    android:background="@drawable/rounded_corner_dummy_data_mode"
                    android:gravity="center"
                    >

                    <TextView
                        android:id="@+id/textSoftwareUpdatePending"
                        android:text="@string/textSoftwareUpdateAvailable"
                        android:textStyle="bold"
                        android:textSize="15sp"
                        android:textColor="@color/white"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:gravity="center"
                        />

                </LinearLayout>

            </LinearLayout>

        </TableRow>

        <TableRow android:id="@+id/tableRowManuallyEnteredOnlySession">

            <LinearLayout
                android:layout_width="fill_parent"
                android:layout_height="fill_parent"
                android:gravity="center"
                android:baselineAligned="false">

                <LinearLayout
                    android:layout_height="185dp"
                    android:layout_width="140dp"
                    android:background="@drawable/rounded_corner_grey"
                    android:gravity="center"
                    >

                    <TextView
                        android:id="@+id/textManualVitalsOnlySession"
                        android:text="@string/manual_vitals_only"
                        android:textStyle="bold"
                        android:textSize="15sp"
                        android:textColor="@color/white"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:gravity="center"
                        />

                </LinearLayout>

            </LinearLayout>

        </TableRow>

        <TableRow android:id="@+id/tableRowSensorDeviceInfo">
            <!-- Using a fixed height here, as otherwise when different things are shown on the Linear Layouts, it extends the height. 224dp is 320px -->
