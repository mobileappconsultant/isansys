<?xml version="1.0" encoding="utf-8"?>

<LinearLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:layout_marginStart="50dp"
    android:layout_marginEnd="50dp"
    android:orientation="vertical"
    >

    <Space
        android:layout_width="match_parent"
        android:layout_height="0dp"
        android:layout_weight="0.5"
        />

    <TextView
        android:id="@+id/textTop"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="@string/select_annotation_entry_mode"
        android:textSize="40sp"
        android:gravity="center"
        />

    <Space
        android:layout_width="match_parent"
        android:layout_height="0dp"
        android:layout_weight="0.5"
        />

    <TableLayout
        android:layout_width="match_parent"
        android:layout_height="0dp"
        android:layout_weight="4"
        android:layout_marginStart="50dp"
        android:layout_marginEnd="50dp"
        >

        <TableRow
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:gravity="center_vertical|center_horizontal" >

            <TextView
                android:id="@+id/textVitalSignValue"
                android:layout_width="match_parent"
                android:text="@string/dummy_measurement"
                android:layout_marginBottom="10dp"
                android:layout_marginTop="10dp"
                android:textSize="55sp"
                android:textStyle="bold" />

        </TableRow>

        <TableRow
            android:layout_width="match_parent"
            android:layout_height="match_parent" >

            <Button
                android:id="@+id/buttonAnnotationKeyboard"
                android:text="@string/keyboard"
                android:textSize="36sp"
                android:textStyle="bold"
                android:layout_marginTop="@dimen/keypad_margin_top"
                android:layout_width="0dp"
                android:layout_weight="1"
                android:layout_height="100dp"
                android:textColor="@color/white"
                android:background="@drawable/button_blue"
                />

        </TableRow>

        <TableRow
            android:layout_width="match_parent"
            android:layout_height="match_parent" >

            <Button
                android:id="@+id/buttonAnnotationPredefined"
                android:text="@string/predefined"
                android:textSize="36sp"
                android:textStyle="bold"
                android:layout_marginTop="@dimen/keypad_margin_top"
                android:layout_weight="1"
                android:layout_height="100dp"
                android:textColor="@color/white"
                android:background="@drawable/button_blue"
                />

        </TableRow>

    </TableLayout>

</LinearLayout>

