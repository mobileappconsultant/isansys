<?xml version="1.0" encoding="utf-8"?>
<LinearLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    android:id="@+id/startSessionSettingsActivity"
    android:orientation="vertical"
    android:layout_width="fill_parent"
    android:layout_height="fill_parent"
    android:gravity="start"
    >

    <TextView
        android:id="@+id/textTop"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="@string/dummy_measurement"
        android:textSize="40sp"
        android:gravity="center"
        />

    <LinearLayout
        android:orientation="horizontal"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:baselineAligned="false"
        >

        <LinearLayout
            android:id="@+id/linearLayoutManualVitalSignEntry"
            android:layout_width="0dp"
            android:layout_height="fill_parent"
            android:layout_weight="3"
            android:orientation="vertical" >

            <FrameLayout
                android:id="@+id/frameLayoutManualVitalSignsEntry"
                android:layout_width="match_parent"
                android:layout_height="fill_parent"
                >
            </FrameLayout>

        </LinearLayout>

        <LinearLayout
            android:id="@+id/linearLayoutManualVitalSignEntryConfirmation"
            android:layout_width="0dp"
            android:layout_height="fill_parent"
            android:layout_weight="1"
            android:gravity="center"
            android:orientation="vertical" >

            <Button
                android:id="@+id/buttonBigButtonTop"
                android:layout_width="280dp"
                android:layout_height="100dp"
                android:text="@string/confirm"
                android:textColor="@color/white"
                android:textSize="36sp"
                android:textStyle="bold"
                android:background="@drawable/button_blue"
                android:layout_marginBottom="8dp"
                />

            <Button
                android:id="@+id/buttonBigButtonBottom"
                android:layout_width="280dp"
                android:layout_height="100dp"
                android:text="@string/confirm"
                android:textColor="@color/white"
                android:textSize="36sp"
                android:textStyle="bold"
                android:background="@drawable/button_blue"
                android:layout_marginTop="8dp"
                />

        </LinearLayout>

    </LinearLayout>

</LinearLayout>
