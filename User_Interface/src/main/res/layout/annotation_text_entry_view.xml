<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:focusable="true"
    android:focusableInTouchMode="true"
    android:orientation="vertical">

    <TextView
        android:id="@+id/textTop"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="@string/dummy_measurement"
        android:textSize="40sp"
        android:gravity="center"
        />

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:gravity="center_vertical"
        android:orientation="horizontal">

        <EditText
            android:id="@+id/editTextAnnotationEntry"
            android:background="@drawable/blue_rounded_border_edittext"
            android:textSize="24sp"
            android:padding="20dp"
            android:layout_width="0dp"
            android:layout_weight="3"
            android:layout_height="wrap_content"
            android:lines="10"
            android:minLines="10"
            android:gravity="top|start"
            android:inputType="textMultiLine|textNoSuggestions|textVisiblePassword"
            android:fadeScrollbars="false"
            android:scrollbars="vertical"
            android:layout_margin="20dp"
            android:hint="@string/please_type_annotation_here" >
        </EditText>

        <Button
            android:id="@+id/buttonFinishedTyping"
            android:text="@string/hide_keyboard"
            android:textSize="36sp"
            android:textStyle="bold"
            android:layout_width="0dp"
            android:layout_weight="1"
            android:layout_height="100dp"
            android:layout_margin="20dp"
            android:textColor="@color/white"
            android:background="@drawable/button_blue"
            />

    </LinearLayout>

</LinearLayout>