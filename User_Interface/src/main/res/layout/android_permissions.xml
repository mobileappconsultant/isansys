				android:layout_height="wrap_content"
				android:layout_weight="4"
				android:gravity="center_vertical"
				android:orientation="vertical">

				<TextView
					android:id="@+id/textViewOverlayPermission"
					android:text="@string/overlay_permission"
					android:layout_width="wrap_content"
					android:layout_height="wrap_content"
					android:gravity="center_vertical"
					android:textSize="@dimen/permissions_page_permission_name" />

				<TextView
					android:id="@+id/textViewOverlayPermissionDescription"
					android:layout_width="match_parent"
					android:layout_height="match_parent"
					android:gravity="center_vertical"
					android:text="@string/needed_for_general_system_usage"
					android:textSize="@dimen/permissions_page_permission_reason" />
			</LinearLayout>

			<LinearLayout
				android:layout_width="0dp"
				android:layout_height="wrap_content"
				android:layout_weight="2"
				android:gravity="center_vertical"
				android:orientation="horizontal">

				<View
					android:id="@+id/viewOverlayPermission"
					android:layout_width="35dp"
					android:layout_height="35dp"
					android:layout_gravity="center"
					android:background="@drawable/circle_yellow"
					android:visibility="visible" />

				<Button
					android:id="@+id/buttonEnableOverlayPermissions"
					android:text="@string/enable"
					android:layout_width="200dp"
					android:layout_height="75dp"
					android:layout_marginStart="30dp"
					android:background="@drawable/button_blue"
					android:gravity="center|center_vertical"
					android:textColor="@color/white" />

			</LinearLayout>

		</TableRow>

