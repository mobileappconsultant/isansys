<layer-list xmlns:android="http://schemas.android.com/apk/res/android" >
    <item android:id="@android:id/background">
        <shape>
            <corners android:radius="5dip" />
            <gradient
                android:angle="270"
                android:centerColor="#ffd6d6d6"
                android:centerY="0.5"
                android:endColor="#ffd6d6d6"
                android:startColor="#ffd6d6d6" />
        </shape>
    </item>
    <item android:id="@android:id/progress">
        <clip>
            <shape>
                <corners android:radius="5dip" />
                <gradient
                    android:angle="0"
                    android:endColor="#ff4099FF"
                    android:startColor="#ff4099FF" />
            </shape>
        </clip>
    </item>
</layer-list>