<?xml version="1.0" encoding="utf-8"?>
<LinearLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="fill_parent"
    android:layout_height="fill_parent"
    android:layout_gravity="center"
    android:orientation="vertical"
    >

    <TextView
        android:id="@+id/textEnteredValue"
        android:layout_height="wrap_content"
        android:layout_width="match_parent"
        android:layout_gravity="center"
        android:gravity="center_horizontal|center_vertical"
        android:text="@string/dummy_keypad_measurement"
        android:includeFontPadding="false"
        android:layout_marginBottom="-15dp"
        android:layout_marginTop="-15dp"
        android:textSize="100sp"
        android:textStyle="bold" />

    <GridLayout
        android:layout_width="wrap_content"
        android:layout_height="fill_parent"
        android:layout_gravity="center"
        android:columnCount="5"
        android:orientation="horizontal" >

        <!-- This one is only for spacing -->
        <Button
            android:layout_row="0"
            android:layout_column="0"
            android:layout_marginTop="@dimen/keypad_margin_top"
            android:layout_width="100dp"
            android:layout_height="100dp"
            android:visibility="invisible" />

        <Button
            android:id="@+id/buttonNumberOne"
            android:text="@string/number_one"
            android:layout_row="0"
            android:layout_column="1"
            android:textSize="36sp"
            android:textStyle="bold"
            android:layout_marginTop="@dimen/keypad_margin_top"
            android:layout_width="100dp"
            android:layout_height="100dp"
            android:background="@drawable/button_green"
            />

        <Button
            android:id="@+id/buttonNumberTwo"
            android:text="@string/number_two"
            android:layout_row="0"
            android:layout_column="2"
            android:textSize="36sp"
            android:textStyle="bold"
            android:layout_marginTop="@dimen/keypad_margin_top"
            android:layout_marginStart="@dimen/keypad_margin_left"
            android:layout_width="100dp"
            android:layout_height="100dp"
            android:background="@drawable/button_green"
            />

        <Button
            android:id="@+id/buttonNumberThree"
            android:text="@string/number_three"
            android:layout_row="0"
            android:layout_column="3"
            android:textSize="36sp"
            android:textStyle="bold"
            android:layout_marginTop="@dimen/keypad_margin_top"
            android:layout_marginStart="@dimen/keypad_margin_left"
            android:layout_width="100dp"
            android:layout_height="100dp"
            android:background="@drawable/button_green"
            />

        <Button
            android:id="@+id/buttonNumberFour"
            android:text="@string/number_four"
            android:layout_row="1"
            android:layout_column="1"
            android:textSize="36sp"
            android:textStyle="bold"
            android:layout_marginTop="@dimen/keypad_margin_top"
            android:layout_width="100dp"
            android:layout_height="100dp"
            android:background="@drawable/button_green"
            />

        <Button
            android:id="@+id/buttonNumberFive"
            android:text="@string/number_five"
            android:layout_row="1"
            android:layout_column="2"
            android:textSize="36sp"
            android:textStyle="bold"
            android:layout_marginTop="@dimen/keypad_margin_top"
            android:layout_marginStart="@dimen/keypad_margin_left"
            android:layout_width="100dp"
            android:layout_height="100dp"
            android:background="@drawable/button_green"
            />

        <Button
            android:id="@+id/buttonNumberSix"
            android:text="@string/number_six"
            android:layout_row="1"
            android:layout_column="3"
            android:textSize="36sp"
            android:textStyle="bold"
            android:layout_marginTop="@dimen/keypad_margin_top"
            android:layout_marginStart="@dimen/keypad_margin_left"
            android:layout_width="100dp"
            android:layout_height="100dp"
            android:background="@drawable/button_green"
            />

        <Button
            android:id="@+id/buttonNumberSeven"
            android:text="@string/number_seven"
            android:layout_row="2"
            android:layout_column="1"
            android:textSize="36sp"
            android:textStyle="bold"
            android:layout_marginTop="@dimen/keypad_margin_top"
            android:layout_width="100dp"
            android:layout_height="100dp"
            android:background="@drawable/button_green"
            />

        <Button
            android:id="@+id/buttonNumberEight"
            android:text="@string/number_eight"
            android:layout_row="2"
            android:layout_column="2"
            android:textSize="36sp"
            android:textStyle="bold"
            android:layout_marginTop="@dimen/keypad_margin_top"
            android:layout_marginStart="@dimen/keypad_margin_left"
            android:layout_width="100dp"
            android:layout_height="100dp"
            android:background="@drawable/button_green"
            />

        <Button
            android:id="@+id/buttonNumberNine"
            android:text="@string/number_nine"
            android:layout_row="2"
            android:layout_column="3"
            android:textSize="36sp"
            android:textStyle="bold"
            android:layout_marginTop="@dimen/keypad_margin_top"
            android:layout_marginStart="@dimen/keypad_margin_left"
            android:layout_width="100dp"
            android:layout_height="100dp"
            android:background="@drawable/button_green"
            />

        <Button
            android:id="@+id/buttonNumberZero"
            android:layout_columnSpan="2"
            android:layout_row="3"
            android:layout_column="1"
            android:layout_gravity="fill_horizontal"
            android:text="@string/number_zero"
            android:textSize="36sp"
            android:textStyle="bold"
            android:layout_marginTop="@dimen/keypad_margin_top"
            android:layout_width="100dp"
            android:layout_height="100dp"
            android:background="@drawable/button_green"
            />

        <Button
            android:id="@+id/buttonDecimal"
            android:text="@string/decimal_point"
            android:background="@drawable/button_green"
            android:layout_row="3"
            android:layout_column="3"
            android:textSize="36sp"
            android:textStyle="bold"
            android:layout_marginTop="@dimen/keypad_margin_top"
            android:layout_marginStart="@dimen/keypad_margin_left"
            android:layout_width="100dp"
            android:layout_height="100dp"
            />

        <!-- marginTop below SHOULD be @dimen/keypad_margin_top but for some reason, the text is making it move down the page. So hardcoding it so it aligns properly for now -->
        <Button
            android:id="@+id/buttonDelete"
            android:text="@string/delete"
            android:layout_row="3"
            android:layout_column="4"
            android:textSize="20sp"
            android:textStyle="bold"
            android:layout_marginTop="4dp"
            android:layout_marginStart="@dimen/keypad_margin_left"
            android:layout_width="100dp"
            android:layout_height="100dp"
            android:background="@drawable/button_green"
            />
    </GridLayout>

</LinearLayout>
