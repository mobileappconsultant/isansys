<?xml version="1.0" encoding="utf-8"?>

<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="fill_parent"
    android:layout_height="fill_parent"
    android:layout_centerHorizontal="true"
    android:orientation="horizontal"
    android:baselineAligned="false">

    <!-- Left Column -->
    <LinearLayout
        android:layout_width="0dp"
        android:layout_height="match_parent"
        android:layout_weight="1"
        android:baselineAligned="false"
        android:orientation="vertical"
        android:padding="2dp">

        <!-- Setup Mode Length -->
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="0dp"
            android:layout_weight="1"
            android:orientation="vertical">

            <LinearLayout
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:orientation="horizontal">

                <TextView
                    android:id="@+id/labelSetupModeLength"
                    android:layout_width="@dimen/admin_page_description_width"
                    android:layout_height="match_parent"
                    android:gravity="center|start"
                    android:text="@string/setup_mode_length"
                    android:textColor="@color/black"
                    android:textSize="16sp"
                    android:textStyle="bold" />

                <Spinner
                    android:id="@+id/spinnerSetupModeLength"
                    android:layout_width="@dimen/admin_page_spinner_width"
                    android:layout_height="match_parent"
                    android:entries="@array/setup_mode_length" />

            </LinearLayout>

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:paddingStart="0dp"
                android:paddingEnd="@dimen/admin_page_description_padding_end"
                android:text="@string/description_setup_mode_length" />

        </LinearLayout>

        <!-- Long Term Measurement Timeout -->
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="0dp"
            android:layout_weight="3"
            android:orientation="vertical">

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="horizontal">

                <TextView
                    android:id="@+id/labelLongTermMeasurementTimeoutLength"
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:gravity="center|start"
                    android:text="@string/stringLongTermMeasurementTimeoutLength"
                    android:textColor="@color/black"
                    android:textSize="16sp"
                    android:textStyle="bold" />

            </LinearLayout>

            <TextView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:paddingStart="0dp"
                android:paddingEnd="@dimen/admin_page_description_padding_end"
                android:text="@string/description_long_term_measurement_timeout" />

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginTop="5dp"
                android:orientation="horizontal"
                android:baselineAligned="false">

                <LinearLayout
                    android:layout_width="0dp"
                    android:layout_height="wrap_content"
                    android:layout_weight="1"
                    android:orientation="vertical"
                    android:paddingStart="10dp"
                    android:paddingEnd="0dp">

                    <TextView
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:text="@string/spo2"
                        android:textStyle="bold" />

                    <Spinner
                        android:id="@+id/spinnerLongTermMeasurementTimeoutLengthSpO2"
                        android:layout_width="@dimen/admin_page_spinner_width"
                        android:layout_height="match_parent" />
                </LinearLayout>

                <LinearLayout
                    android:layout_width="0dp"
                    android:layout_height="wrap_content"
                    android:layout_weight="1"
                    android:orientation="vertical"
                    android:paddingStart="10dp"
                    android:paddingEnd="0dp">

                    <TextView
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:text="@string/blood_pressure"
                        android:textStyle="bold" />

                    <Spinner
                        android:id="@+id/spinnerLongTermMeasurementTimeoutLengthBloodPressure"
                        android:layout_width="@dimen/admin_page_spinner_width"
                        android:layout_height="match_parent" />

                </LinearLayout>

            </LinearLayout>


            <TextView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginTop="10dp"
                android:paddingStart="0dp"
                android:paddingEnd="@dimen/admin_page_description_padding_end"
                android:text="@string/below_is_not_included_in_the_early_warning_score_calculations_but_state_how_long_to_display_the_measurement_for" />

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginTop="5dp"
                android:orientation="horizontal"
                android:baselineAligned="false">

                <LinearLayout
                    android:layout_width="0dp"
                    android:layout_height="wrap_content"
                    android:layout_weight="1"
                    android:orientation="vertical"
                    android:paddingStart="10dp"
                    android:paddingEnd="0dp">

                    <TextView
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:text="@string/weight"
                        android:textStyle="bold" />

                    <Spinner
                        android:id="@+id/spinnerLongTermMeasurementTimeoutLengthWeight"
                        android:layout_width="@dimen/admin_page_spinner_width"
                        android:layout_height="match_parent" />
                </LinearLayout>

                <LinearLayout
                    android:layout_width="0dp"
                    android:layout_height="wrap_content"
                    android:layout_weight="1"
                    android:orientation="vertical"
                    android:visibility="invisible"
                    android:paddingStart="10dp"
                    android:paddingEnd="0dp">

                    <TextView
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:text="@string/third_party_temperature"
                        android:textStyle="bold" />

                    <Spinner
                        android:id="@+id/spinnerLongTermMeasurementTimeoutLengthThirdPartyTemperature"
                        android:layout_width="@dimen/admin_page_spinner_width"
                        android:layout_height="match_parent" />

                </LinearLayout>

            </LinearLayout>

        </LinearLayout>



        <!-- Screen Timeout -->
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="0dp"
            android:layout_weight="1"
            android:orientation="vertical">

            <LinearLayout
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:orientation="horizontal">

                <TextView
                    android:id="@+id/labelDisplayTimeoutLength"
                    android:layout_width="@dimen/admin_page_description_width"
                    android:layout_height="match_parent"
                    android:gravity="center|start"
                    android:text="@string/stringDisplayTimeoutLength"
                    android:textColor="@color/black"
                    android:textSize="16sp"
                    android:textStyle="bold" />

                <Spinner
                    android:id="@+id/spinnerDisplayTimeoutLength"
                    android:layout_width="@dimen/admin_page_spinner_width"
                    android:layout_height="match_parent"
                    android:entries="@array/display_timeout_array" />

            </LinearLayout>

            <TextView
                android:id="@+id/labelDisplayTimeoutLengthDescription"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:paddingStart="0dp"
                android:paddingEnd="@dimen/admin_page_description_padding_end"
                android:text="@string/description_display_timeout" />

        </LinearLayout>

        <!-- Apply Display Timeout To Patient Vitals Display -->
        <LinearLayout
            android:id="@+id/linearLayoutApplyDisplayTimeoutToPatientVitalsDisplay"
            android:layout_width="match_parent"
            android:layout_height="0dp"
            android:layout_weight="1"
            android:orientation="vertical">

            <CheckBox
                android:id="@+id/checkBoxApplyDisplayTimeoutToPatientVitalsDisplay"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:button="@drawable/checkbox"
                android:text="@string/use_display_timeout_on_chart_page"
                android:textStyle="bold" />

            <TextView
                android:id="@+id/labelDisplayTimeoutOnPatientVitalsDisplayDescription"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:paddingStart="0dp"
                android:paddingEnd="@dimen/admin_page_description_padding_end"
                android:text="@string/auto_lock_the_screen_when_on_the_chart_page" />
        </LinearLayout>


    </LinearLayout>

    <!-- Middle Column -->
    <LinearLayout
        android:layout_width="0dp"
        android:layout_height="match_parent"
        android:layout_weight="1"
        android:baselineAligned="false"
        android:orientation="vertical"
        android:padding="2dp">

        <!-- Periodic Setup Mode -->
        <LinearLayout
            android:id="@+id/linearLayoutDevicePeriodicSetupModeEnabled"
            android:layout_width="match_parent"
            android:layout_height="0dp"
            android:layout_weight="1"
            android:orientation="vertical">

            <LinearLayout
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:orientation="horizontal">

                <CheckBox
                    android:id="@+id/checkBoxDevicePeriodicSetupModeEnabled"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginBottom="1dp"
                    android:button="@drawable/checkbox"
                    android:text="@string/device_periodic_setup_mode"
                    android:textStyle="bold" />

                <Spinner
                    android:id="@+id/spinnerDevicePeriodicModeActiveTimeInSeconds"
                    android:layout_width="wrap_content"
                    android:layout_height="match_parent"
                    android:entries="@array/periodic_mode_length" />

                <TextView
                    android:id="@+id/labelDevicePeriodicModeEvery"
                    android:layout_width="wrap_content"
                    android:layout_height="match_parent"
                    android:gravity="center_vertical|center"
                    android:text="@string/every"
                    android:textColor="@color/black" />

                <Spinner
                    android:id="@+id/spinnerDevicePeriodicModePeriodTimeInSeconds"
                    android:layout_width="wrap_content"
                    android:layout_height="match_parent"
                    android:entries="@array/periodic_mode_length" />

            </LinearLayout>

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:paddingStart="0dp"
                android:paddingEnd="@dimen/admin_page_description_padding_end"
                android:text="@string/description_periodic_setup_mode" />

        </LinearLayout>


        <!-- SpO2 Spot Measurements -->
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="0dp"
            android:layout_weight="1"
            android:orientation="vertical">

            <CheckBox
                android:id="@+id/checkSpO2SpotMeasurementsEnabled"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:button="@drawable/checkbox"
                android:text="@string/spo2_spot_measurements"
                android:textStyle="bold" />

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:paddingStart="0dp"
                android:paddingEnd="@dimen/admin_page_description_padding_end"
                android:text="@string/description_spo2_spot_measurements" />

        </LinearLayout>
        <!-- Auto Add Early Warning Scores -->
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="0dp"
            android:layout_weight="1"
            android:orientation="vertical">

            <CheckBox
                android:id="@+id/checkBoxAutoAddEarlyWarningScores"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:button="@drawable/checkbox"
                android:text="@string/autoAddEarlyWarningScores"
                android:textStyle="bold" />

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:paddingStart="0dp"
                android:paddingEnd="@dimen/admin_page_description_padding_end"
                android:text="@string/description_auto_add_ews" />

        </LinearLayout>


        <!-- DFU Bootloader Enabled -->
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="0dp"
            android:layout_weight="1"
            android:orientation="vertical">

            <CheckBox
                android:id="@+id/checkDfuBootloaderEnabled"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:button="@drawable/checkbox"
                android:text="@string/dfu"
                android:textStyle="bold" />

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:paddingStart="0dp"
                android:paddingEnd="@dimen/admin_page_description_padding_end"
                android:text="@string/description_dfu" />

        </LinearLayout>

        <!-- Enable Unplugged Overlay -->
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="0dp"
            android:layout_weight="1"
            android:orientation="vertical">

            <CheckBox
                android:id="@+id/checkBoxEnableUnpluggedOverlay"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:button="@drawable/checkbox"
                android:text="@string/enabledUnpluggedOverlay"
                android:textStyle="bold" />

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:paddingStart="0dp"
                android:paddingEnd="@dimen/admin_page_description_padding_end"
                android:text="@string/description_unplugged_overlay" />

        </LinearLayout>


        <!-- Patient Name Lookup -->
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="0dp"
            android:layout_weight="1"
            android:orientation="vertical">

            <CheckBox
                android:id="@+id/checkBoxPatientNameLookup"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:button="@drawable/checkbox"
                android:text="@string/patient_name_lookup"
                android:textStyle="bold" />

            <TextView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:paddingStart="0dp"
                android:paddingEnd="@dimen/admin_page_description_padding_end"
                android:text="@string/description_patient_name_lookup" />

        </LinearLayout>

    </LinearLayout>

    <!-- Right Column -->
    <LinearLayout
        android:layout_width="0dp"
        android:layout_height="match_parent"
        android:layout_weight="1"
        android:baselineAligned="false"
        android:orientation="vertical"
        android:padding="2dp">

        <!-- Lifetouch Poor Signal -->
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="0dp"
            android:layout_weight="1"
            android:orientation="vertical">

            <LinearLayout
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:orientation="horizontal">

                <TextView
                    android:id="@+id/labelLifetouchPoorDeviceSignalPercentage"
                    android:layout_width="@dimen/admin_page_description_width"
                    android:layout_height="match_parent"
                    android:gravity="center|start"
                    android:text="@string/description_poor_signal"
                    android:textColor="@color/black"
                    android:textSize="16sp"
                    android:textStyle="bold" />

                <Spinner
                    android:id="@+id/spinnerLifetouchPercentageOfPoorSignalHeartBeatsBeforeMarkingAsInvalid"
                    android:layout_width="@dimen/admin_page_spinner_width"
                    android:layout_height="match_parent"
                    android:entries="@array/percentages" />

            </LinearLayout>

            <TextView
                android:id="@+id/labelLifetouchPoorDeviceSignalPercentageDescription"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:paddingStart="0dp"
                android:paddingEnd="@dimen/admin_page_description_padding_end"
                android:text="@string/percentage_of_poor_signal_heart_beats_before_marking_as_invalid" />

        </LinearLayout>

        <!-- SpO2 number of invalid intermediate measurements before marking as invalid -->
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="0dp"
            android:layout_weight="1"
            android:orientation="vertical">

            <LinearLayout
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:orientation="horizontal">

                <TextView
                    android:id="@+id/labelNoninPulseOxNumberOfInvalidIntermediateMeasurementsBeforeMarkingAsInvalid"
                    android:layout_width="@dimen/admin_page_description_width"
                    android:layout_height="match_parent"
                    android:gravity="center|start"
                    android:text="@string/invalid_spo2_measurements"
                    android:textColor="@color/black"
                    android:textSize="16sp"
                    android:textStyle="bold" />

                <Spinner
                    android:id="@+id/spinnerNoninPulseOxNumberOfInvalidIntermediateMeasurementsBeforeMarkingAsInvalid"
                    android:layout_width="@dimen/admin_page_spinner_width"
                    android:layout_height="match_parent"
                    android:entries="@array/number_of_invalid_intermediate_measurements" />

            </LinearLayout>

            <TextView
                android:id="@+id/labelNoninPulseOxNumberOfInvalidIntermediateMeasurementsBeforeMarkingAsInvalidDescription"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:paddingStart="0dp"
                android:paddingEnd="@dimen/admin_page_description_padding_end"
                android:text="@string/number_of_invalid_intermediate_measurements_before_marking_as_invalid" />
        </LinearLayout>

        <!-- Enable Predefined Annotations -->
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="0dp"
            android:layout_weight="1"
            android:orientation="vertical">

            <CheckBox
                android:id="@+id/checkBoxEnablePredefinedAnnotations"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:button="@drawable/checkbox"
                android:text="@string/predefined_annotations"
                android:textStyle="bold" />

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:paddingStart="0dp"
                android:paddingEnd="@dimen/admin_page_description_padding_end"
                android:text="@string/description_predefined_annotations" />

        </LinearLayout>

        <!-- Enable LT3 KHz Setup Mode -->
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="0dp"
            android:layout_weight="1"
            android:orientation="horizontal">

            <CheckBox
                android:id="@+id/checkBoxEnableLT3KHzSetupMode"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:button="@drawable/checkbox"
                android:text="@string/enableLT3KHzSetupMode"
                android:textStyle="bold"
                android:visibility="visible" />

        </LinearLayout>

        <!-- Gsm Mode Only -->
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="0dp"
            android:layout_weight="1"
            android:orientation="vertical">

            <CheckBox
                android:id="@+id/checkBoxGsmModeOnly"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:button="@drawable/checkbox"
                android:text="@string/gsm"
                android:textStyle="bold" />

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:paddingStart="0dp"
                android:paddingEnd="@dimen/admin_page_description_padding_end"
                android:text="@string/description_gsm" />
        </LinearLayout>


        <!-- Spare -->
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="0dp"
            android:layout_weight="1"
            android:orientation="vertical">

        </LinearLayout>

    </LinearLayout>

</LinearLayout>
