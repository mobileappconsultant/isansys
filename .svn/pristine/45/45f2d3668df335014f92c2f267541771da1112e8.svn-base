<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:orientation="vertical"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@drawable/bg_white_round">

    <TableLayout
        android:layout_width="700dp"
        android:layout_height="500dp"
        android:layout_gravity="center"
        android:gravity="center_vertical|center|center_horizontal"
        android:layout_margin="20dp" >

        <TableRow
            android:layout_width="fill_parent"
            android:layout_height="wrap_content"
            android:layout_weight="7"
            >

            <TextView
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:textAppearance="?android:attr/textAppearanceMedium"
                android:text="Bluetooth"
                android:textStyle="bold"
                android:layout_weight="1" />

            <Button
                android:id="@+id/buttonResetBluetooth"
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_weight="3"
                android:text="Reset Bluetooth without removing devices" />

            <Button
                android:id="@+id/buttonRemoveDevicesAndResetBluetooth"
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_weight="3"
                android:text="Remove devices and  reset Bluetooth" />
        </TableRow>

        <TableRow
            android:layout_width="fill_parent"
            android:layout_height="wrap_content"
            android:layout_weight="7"
            >

            <TextView
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:textAppearance="?android:attr/textAppearanceMedium"
                android:text="Bluetooth Low Level"
                android:textStyle="bold"
                android:layout_weight="1" />

            <Button
                android:id="@+id/buttonDisableBluetoothAdapter"
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_weight="3"
                android:text="Disable Bluetooth Adapter" />

            <Button
                android:id="@+id/buttonEnableBluetoothAdapter"
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_weight="3"
                android:text="Enable Bluetooth Adapter" />
        </TableRow>

        <TableRow
            android:layout_width="fill_parent"
            android:layout_height="wrap_content"
            android:layout_weight="7"
            >

            <TextView
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:textAppearance="?android:attr/textAppearanceMedium"
                android:text="Enable WIFI"
                android:textStyle="bold"
                android:layout_weight="1" />

            <Button
                android:id="@+id/buttonDisableWifi"
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_weight="3"
                android:text="Disable WIFI" />

            <Button
                android:id="@+id/buttonEnableWifi"
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_weight="3"
                android:text="Enable WIFI" />
        </TableRow>

        <TableRow
            android:layout_width="fill_parent"
            android:layout_height="wrap_content"
            android:layout_weight="7"
            >

            <TextView
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:textAppearance="?android:attr/textAppearanceMedium"
                android:text="Number of times postCompleteBleReset"
                android:textStyle="bold"
                android:layout_weight="4" />

            <TextView
                android:id="@+id/textViewPostCompleteBleReset"
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:textAppearance="?android:attr/textAppearanceMedium"
                android:text="1234"
                android:textStyle="bold"
                android:layout_weight="3" />

        </TableRow>

        <TableRow
            android:layout_width="fill_parent"
            android:layout_height="wrap_content"
            android:layout_weight="7"
            >

            <TextView
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:textAppearance="?android:attr/textAppearanceMedium"
                android:text="Number of times postBleResetWithoutRemovingDevices"
                android:textStyle="bold"
                android:layout_weight="4" />

            <TextView
                android:id="@+id/textViewPostBleResetWithoutRemovingDevices"
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:textAppearance="?android:attr/textAppearanceMedium"
                android:text="1234"
                android:textStyle="bold"
                android:layout_weight="3" />

        </TableRow>

        <TableRow
            android:layout_width="fill_parent"
            android:layout_height="wrap_content"
            android:layout_weight="7"
            >

            <Button
                android:id="@+id/buttonResetDatabaseFailedtoSendStatus"
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_weight="3"
                android:text="Reset Database Failed To Send Status" />

        </TableRow>

        <TableRow
            android:layout_width="fill_parent"
            android:layout_height="wrap_content"
            android:layout_weight="7"
            >

            <TextView
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:textAppearance="?android:attr/textAppearanceMedium"
                android:text="Crash on demand"
                android:textStyle="bold"
                android:layout_weight="1" />

            <Button
                android:id="@+id/buttonCrashPatientGatewayOnDemand"
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_weight="3"
                android:text="Crash Gateway" />

            <Button
                android:id="@+id/buttonCrashUserInterfaceOnDemand"
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_weight="3"
                android:text="Crash UI" />
        </TableRow>

        <TableRow
            android:layout_width="fill_parent"
            android:layout_height="wrap_content"
            android:layout_weight="7"
            >

            <TextView
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:textAppearance="?android:attr/textAppearanceMedium"
                android:text="Nonin 3150 BLE"
                android:textStyle="bold"
                android:layout_weight="1" />

            <Button
                android:id="@+id/buttonStartNoninBlePlaybackFromFile"
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_weight="3"
                android:text="Start Playback simulation from file" />

        </TableRow>

        <TableRow
            android:layout_width="fill_parent"
            android:layout_height="wrap_content"
            android:layout_weight="7"
            >

            <TextView
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:textAppearance="?android:attr/textAppearanceMedium"
                android:text="Server Syncing Test Mode"
                android:textStyle="bold"
                android:layout_weight="1" />

            <Button
                android:id="@+id/buttonEnableServerSyncingTestMode"
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_weight="3"
                android:text="Enable" />

            <Button
                android:id="@+id/buttonDisableServerSyncingTestMode"
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_weight="3"
                android:text="Disable" />
        </TableRow>

    </TableLayout>

    <LinearLayout
        android:orientation="horizontal"
        android:layout_width="fill_parent"
        android:layout_height="wrap_content"
        android:gravity="center_vertical|center|center_horizontal"
        android:layout_marginBottom="10dp"
        android:layout_marginLeft="20dp"
        android:layout_marginRight="20dp">

        <Button
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:text="@string/button_wifi_dismiss_string"
            android:id="@+id/button_developer_popup_dismiss" />
    </LinearLayout>

</LinearLayout>