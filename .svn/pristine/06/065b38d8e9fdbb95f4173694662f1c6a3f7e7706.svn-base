<?xml version="1.0" encoding="utf-8"?>
<LinearLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    android:id="@+id/barCodeActivity"
    android:orientation="horizontal"
    android:layout_width="fill_parent"
    android:layout_height="fill_parent"
    android:baselineAligned="false" >
    
	<LinearLayout
		android:id="@+id/check_device_status_qr_bar_code"
		android:orientation="vertical"
        android:layout_width="0dp"
        android:layout_height="fill_parent"
	    android:layout_marginTop="10dp"
	    android:layout_marginBottom="10dp"
	    android:layout_marginStart="10dp"
	    android:layout_marginEnd="10dp"
		android:layout_weight="1"
		android:gravity="center"
		>
	</LinearLayout>
 
	<LinearLayout
        android:layout_width="0dp"
        android:layout_height="fill_parent"
        android:layout_marginTop="10dp"
        android:layout_marginBottom="10dp"
        android:layout_marginEnd="10dp"
        android:layout_marginStart="10dp"
        android:gravity="center"
        android:layout_weight="1"
        android:orientation="vertical" >
	    
	    <LinearLayout
            android:layout_width="fill_parent"
            android:layout_height="0dp"
            android:gravity="center"
            android:layout_weight="1"
            android:orientation="vertical" >
            
            <TableLayout
                android:layout_width="match_parent"
                android:layout_height="fill_parent"
                android:gravity="center"
                android:shrinkColumns="*"
                android:stretchColumns="*" >
    
                <TableRow>
                    <TextView
                        android:layout_weight="3"
                        android:gravity="center"
                        android:text="@string/check_device_status"
                        android:textSize="36sp"
                        android:textStyle="bold" />
                </TableRow>
    
                <TableRow>
                    <TextView
                        android:id="@+id/textAddDevicesPageHelp"
                        android:layout_weight="3"
                        android:gravity="center"
                        android:text="@string/hold_qr_code_so_it_fits_in_the_smaller_lighter_square_on_the_left"
                        android:textColor="@color/black"
                        android:textSize="24sp"
                        android:textStyle="bold" />
                </TableRow>
                
                <TableRow>
                    <View
                        android:layout_width="fill_parent"
                        android:layout_height="30dp"
                        />
                </TableRow>
                
                <TableRow>
                    <TextView
                        android:id="@+id/textViewCheckDeviceStatusCheckingServer"
                        android:layout_width="fill_parent"
                        android:layout_height="wrap_content"
                        android:text="@string/checking_with_server"
                        android:textSize="24sp"
                        android:textStyle="bold"
                        android:gravity="center"
                        />
                </TableRow>                
    
            </TableLayout>
	        	        
        </LinearLayout>
	    
	    <LinearLayout
	        android:layout_width="fill_parent"
	        android:layout_height="0dp"
	        android:gravity="center"
	        android:layout_weight="1"
	        android:orientation="vertical"
			>
	 
	        <TableLayout
	            android:layout_width="fill_parent"
	            android:layout_height="fill_parent"
	            android:gravity="center"
	            android:shrinkColumns="*"
	            android:stretchColumns="*" >
	
	            <TableRow>
	                <TextView
	                    android:id="@+id/textViewCheckDeviceStatusDeviceTypeLabel"
	                    android:layout_width="fill_parent"
	                    android:layout_height="wrap_content"
	                    android:text="@string/device_type"
	                    android:textSize="24sp"
	                    android:textStyle="bold"
						android:layout_gravity="center_horizontal"
	                    />
                    <TextView
                        android:id="@+id/textViewCheckDeviceStatusDeviceHumanReadableSerialNumberLabel"
                        android:layout_width="fill_parent"
                        android:layout_height="wrap_content"
                        android:text="@string/serial_number"
                        android:textSize="24sp"
                        android:textStyle="bold"
						android:layout_gravity="center_horizontal"
                        />
	            </TableRow>
	
	            <TableRow>
	                <TextView
	                    android:id="@+id/textViewChangeDeviceStatusDeviceType"
	                    android:layout_width="wrap_content"
	                    android:layout_height="wrap_content"
	                    android:text="@string/six_dashes"
	                    android:textSize="24sp"
	                    android:textStyle="normal"
						android:layout_gravity="center_horizontal"
	                    />
	
	                <TextView
	                    android:id="@+id/textViewDeviceHumanReadableSerialNumber"
	                    android:layout_width="wrap_content"
	                    android:layout_height="wrap_content"
	                    android:text="@string/six_dashes"
	                    android:textSize="24sp"
						android:layout_gravity="center_horizontal"
	                    />
	            </TableRow>
	            
	             <TableRow>
	                <TextView
	                    android:id="@+id/textViewDeviceMacAddressLabel"
	                    android:layout_width="fill_parent"
                        android:layout_height="wrap_content"
                        android:text="@string/mac_address"
                        android:textSize="24sp"
						android:layout_gravity="center_horizontal"
	                    />
	
	                <TextView
	                    android:id="@+id/textViewDeviceMacAddressNumber"
	                    android:layout_width="wrap_content"
	                    android:layout_height="wrap_content"
	                    android:text="@string/six_dashes"
	                    android:textSize="24sp"
						android:layout_gravity="center_horizontal"
	                    />
	            </TableRow>

 				<TableRow>
					<TextView
						android:id="@+id/textViewDeviceUseStatus"
						android:layout_width="match_parent"
						android:layout_height="wrap_content"
						android:layout_span="2"
						android:text="@string/device_not_in_use"
						android:textSize="36sp"
						android:textStyle="bold"
						android:layout_gravity="center_horizontal"
						/>
				</TableRow>

				<TableRow>
					<View
						android:layout_width="fill_parent"
						android:layout_height="15dp"
						/>
				</TableRow>
	            
                <TableRow>
	                <TextView
	                    android:id="@+id/textViewDeviceWardNameLabel"
	                    android:layout_width="fill_parent"
	                    android:layout_height="wrap_content"
	                    android:text="@string/ward_name"
	                    android:textSize="24sp"
	                    android:textStyle="bold"
						android:layout_span="2"
						android:layout_gravity="center_horizontal"
	                    />
	            </TableRow>

                <TableRow>
	                <TextView
	                    android:id="@+id/textViewCheckDeviceStatusDeviceWardName"
	                    android:layout_width="fill_parent"
	                    android:layout_height="wrap_content"
	                    android:text="@string/six_dashes"
	                    android:textSize="24sp"
						android:layout_span="2"
						android:layout_gravity="center_horizontal"
	                    />
	            </TableRow>

				<TableRow>
					<View
						android:layout_width="fill_parent"
						android:layout_height="15dp"
						/>
				</TableRow>

                <TableRow>
	                <TextView
	                    android:id="@+id/textViewDeviceBedNameLabel"
	                    android:layout_width="fill_parent"
	                    android:layout_height="wrap_content"
	                    android:text="@string/bed_name"
	                    android:textSize="24sp"
	                    android:textStyle="bold"
						android:layout_span="2"
						android:layout_gravity="center_horizontal"
	                    />
	            </TableRow>
	
                <TableRow>
	                <TextView
	                    android:id="@+id/textViewCheckDeviceStatusBedName"
	                    android:layout_width="fill_parent"
	                    android:layout_height="wrap_content"
	                    android:text="@string/six_dashes"
	                    android:textSize="24sp"
						android:layout_span="2"
						android:layout_gravity="center_horizontal"
	                    />
	            </TableRow>
	        </TableLayout>
        
	    </LinearLayout>
	    
	</LinearLayout>
	
</LinearLayout>
